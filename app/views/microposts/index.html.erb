<h1>Listing microposts</h1>
<%= link_to 'New Micropost', new_micropost_path %>
<div class="CSSTableGenerator" >
  <table >
    <tr>
        <td align="center">Content</td>
        <td align="center">User</td>
        <td colspan="3" align="center"> action </td>
    </tr>
    <% @microposts.each do |micropost| %>
    <tr>
        <td align="center"><%= micropost.content %></td>
        <td align="center"><%= micropost.user_id %></td>
        <td align="center"><%= link_to image_tag("show-icon.png", alt: "show-icon"), micropost %></td>
        <td align="center"><%= link_to image_tag("edit-icon.png", alt: "edit-icon"), edit_micropost_path(micropost) %></td>
        <td ><%= link_to image_tag("delete-icon.png", alt: "delete-icon"), micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
</div>


